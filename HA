      - platform: state
        entity_id: input_boolean.boolean_home
        to: 'on'
    condition:
      - condition: template
        value_template: "{{ states.sensor.days_to_next_birthday.state | int > 0 and states.sensor.days_to_next_birthday.state | int < 30 }}"
